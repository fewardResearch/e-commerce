{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES2015",
      "ES2016",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts", 
    "**/*.tsx", "jest.config.js"],
  "exclude": [
    "node_modules"
  ]
}
